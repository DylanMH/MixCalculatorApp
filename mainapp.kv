<CustomOneLineIconListItem>
    icon: root.icon
<FloatInput@MDTextField>
    required: True
    mode: "fill"
    halign: "center"

# Custom Label Properties For The Dimension Labels
<MainLabels@MDLabel>
    font_size: 20
    font_name: 'Comic'
    halign: "center"
    theme_text_color: "Primary"

# Logo Label for Main Screen
<Logo@Label>
    font_size: 50
    font_name: "comic"

<MainButton@MDRoundFlatButton>
    font_size: 30
    font_name: "comic"

WindowManager:
    MainScreen:
        name: "main"
    MixLayout:
        name: "mix"

<MainScreen>:
    id: "main"
    MDIcon:
        icon: "hard-hat"
        theme_text_color: "Custom"
        text_color: 242, 120, 75, 1
        pos_hint: {"x": .1, "y": .72}
    MDFloatLayout:
        Logo: # Logo
            text: "Construction Calculator"
            size_hint: .3, .5
            pos_hint: {"x": 0.35, "y": 0.5}
        MainButton: # Mix Button
            text: "Calculate Mix"
            size_hint: .35, .2
            pos_hint: {"x": .05, "y": .35}
            on_press: root.manager.current = "mix"
        MainButton: # Concrete Button
            text: "Calculate Concrete"
            size_hint: .35, .2
            pos_hint: {"x": .6, "y": .35}
            on_press: 
        MainButton: # Close App Button
            text: "Exit"
            size_hint: .3, .2
            pos_hint: {"x": .35, "y": .1}
            on_press: app.stop()
                    


# Layout of Mix Screen
<MixLayout>:
    id: "mix"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        spacing: 20

        MainLabels:
            id: length
            text: "Length in Feet"
        FloatInput:
            id: length_input
            hint_text: "0"
        MainLabels:
            id: width
            text: "Width in Feet"
        FloatInput:
            id: width_input
            hint_text: "0"
        MainLabels:
            id: depth
            text: "Depth in Inches"
        FloatInput:
            id: depth_input
            hint_text: "0"
        MainButton:
            text: "Calculate Total"
            on_press: root.calculations()
            pos_hint: {'x': .35}
        MainButton:
            text: "Return To Main Screen"
            on_press: root.manager.current = "main"
            pos_hint: {"x": .27}
        MainLabels:
            id: button_output
            text: "Total: "