#:kivy 2.1.0
# Filename: mainapp.kv

# // Custom Design Properties for default KivyMD
# Custom input properties for text input
<FloatInput@MDTextField>
    canvas.after:
        Color:
            rgba: root.box_color if not self.focus else (0, 1, 0, 0)
        Line:
            width: dp(1)
            rectangle:(*self.pos, *self.size)
    required: True
    mode: "fill"
    halign: "center"
    write_tab: False
    input_type: 'number'

# Custom Label Properties For The Dimension Labels
<MainLabels@MDLabel>
    font_size: dp(18)
    halign: "center"
    theme_text_color: "Secondary"

<MenuButtons@MDRoundFlatIconButton>
    pos_hint: {'center_x': .5}
    font_size: dp(30)
    size_hint: .75, None
    padding: 2

# end of custom properties //

# Screen Manager
WindowManager:
    MenuScreen:
        name: "main"
    MixLayout:
        name: "mix"
    ConLayout:
        name: "concrete"
    RockLayout:
        name: "baserock"
    RebarLayout:
        name: "rebar"
    DowelLayout:
        name: "dowel"

# Main Screen Layout
<MenuScreen>:
    name: "main"
    MDBoxLayout:
        spacing: dp(100)
        orientation: "vertical"
        height: self.minimum_height
        size_hint: 1, None
        pos_hint: {'top': 1}
        MDTopAppBar:
            title: "Construction Calculator"
            right_action_items:[["hard-hat"]]
        MenuButtons:
            text: "Asphalt Calculator"
            icon: "road"
            on_press: app.change_screen("mix")
        MenuButtons:
            text: "Concrete Calculator"
            icon: "wall"
            on_press: app.change_screen("concrete")
        MenuButtons:
            text: "BaseRock Calculator"
            icon: "image-filter-hdr"
            on_press: app.change_screen("baserock")
        MenuButtons:
            text: "Rebar Calculator"
            icon: "grid"
            on_press: app.change_screen("rebar")
        MenuButtons:
            text: "Dowel Calculator"
            icon: "dots-square"
            on_press: app.change_screen("dowel")
# Layout of Mix Screen
<MixLayout>:
    name: "mix"
    # Resets users previously inputed values
    on_pre_enter:
        length_input.text = ""
        width_input.text = ""
        depth_input.text = ""
        density_input.text = "145"
        button_output.text = "Calculate Total"
    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(20)
        padding: 0, 0, 0, 5
        MDTopAppBar:
            title: "Asphalt Calculations"
            left_action_items: [['arrow-left-bold',lambda x: app.change_screen("main")]]
            right_action_items: [["road"]]
        MainLabels:
            id: length
            text: "Length in Feet"
        FloatInput:
            id: length_input
        MainLabels:
            id: width
            text: "Width in Feet"
        FloatInput:
            id: width_input
        MainLabels:
            id: depth
            text: "Depth in Inches"
        FloatInput:
            id: depth_input
        MainLabels:
            id: density
            text: "Asphalt Density"
        FloatInput:
            id: density_input
        MDRoundFlatIconButton:
            icon: "calculator-variant"
            id: button_output
            text: "Calculate Total"
            on_press: root.calculations()
            pos_hint: {'center_x': .5}
            font_size: dp(30)
