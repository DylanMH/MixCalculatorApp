# Custom Label Properties For The Dimension Labels
<Dimension@Label>
    font_size: 20
    font_name: 'Comic'
    background_color: (12/255, 81/255, 55/255, .8)
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgba: (94/255, 217/255, 158/255, .8)        
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

# Custom Label Properties For The Total Label            
<Total@Label>
    font_size: 23
    font_name: "Comic"
    background_color: (11/255, 99/255, 132/255, .8)
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos
        Color: 
            rgba: (11/255, 120/255, 128/255, .8)
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

# Custom Button Properties For The Calculate Button
<Calculate@Button>
    font_size: 25
    font_name: "comic"
    background_normal: ""
    background_color: (120/255, 10/255, 22/255, .8)
    canvas.before:
        Color:
            rgba: (115/255, 20/255, 13/255, .8)
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

# Logo Label for Main Screen
<Logo@Label>
    font_size: 50
    font_name: "comic"

<MainButton@MDRoundFlatButton>
    font_size: 30
    font_name: "comic"

WindowManager:
    MainScreen:
        name: "main"
    MixLayout:
        name: "mix"

<MainScreen>:
    id: "main"
    MDFloatLayout:
        Logo: # Logo
            text: "Construction Calculator"
            size_hint: .3, .5
            pos_hint: {"x": 0.35, "y": 0.5}
        MainButton: # Mix Button
            text: "Calculate Mix"
            size_hint: .35, .2
            pos_hint: {"x": .05, "y": .35}
            on_press: root.manager.current = "mix"
        MainButton: # Concrete Button
            text: "Calculate Concrete"
            size_hint: .35, .2
            pos_hint: {"x": .6, "y": .35}
            on_press: 
        MainButton: # Close App Button
            text: "Exit"
            size_hint: .3, .2
            pos_hint: {"x": .35, "y": .1}
            on_press: app.stop()
                    


# Layout of Mix Screen
<MixLayout>:
    id: "mix"
    GridLayout:
        rows: 4
        cols: 2

        Dimension:
            id: length
            text: "Length in Feet"
        FloatInput:
            id: length_input
            hint_text: "0"
        Dimension:
            id: width
            text: "Width in Feet"
        FloatInput:
            id: width_input
            hint_text: "0"
        Dimension:
            id: depth
            text: "Depth in Inches"
        FloatInput:
            id: depth_input
            hint_text: "0"
        Calculate:
            text: "Calculate Total"
            on_press: root.calculations()
        Total:
            id: button_output
            text: "Total: "